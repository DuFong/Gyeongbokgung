<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapsActivity">


    <fragment
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kbsccoding.examples.gyeongbokgung.MapsActivity"/>

    <include layout="@layout/layout_fab_submenu"/>

    <include
        layout="@layout/layout_quest" />

    <TextView
        android:id="@+id/box3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/tutorial_border"
        android:textSize="43sp" />

    <TextView
        android:id="@+id/line3_1"
        android:layout_width="5.3dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/box3"
        android:layout_alignStart="@+id/box3"
        android:layout_marginLeft="100dp"
        android:background="@drawable/tutorial_border"
        android:textSize="90sp" />
    <TextView
        android:id="@+id/line3_2"
        android:layout_width="70dp"
        android:layout_height="5.3dp"
        android:layout_below="@+id/line3_1"
        android:layout_alignStart="@+id/box3"
        android:layout_marginLeft="100dp"
        android:background="@drawable/tutorial_border"
        android:textSize="90sp" />

    <TextView
        android:id="@+id/explain3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line3_2"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-33dp"
        android:layout_marginRight="10dp"
        android:layout_toEndOf="@+id/line3_2"
        android:background="@drawable/tutorial_explain_border"
        android:textSize="15sp"
        android:padding="7dp"
        android:textColor="#050253"
        android:text="현재 퀘스트의 내용을 볼 수\n있습니다. 눌러보세요!"/>

</RelativeLayout>
