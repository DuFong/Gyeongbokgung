<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CompleteActivity"
    android:layout_margin="15dp"
    android:padding="10dp">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        sl:scale_base_height="1000"
        sl:scale_base_width="1000">

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="334dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="313dp"
            android:gravity="center"
            android:text="COMPLETE"
            android:textColor="#ff0101"
            android:textStyle="bold|italic"
            android:background="@drawable/my_border"
            android:layout_centerInParent="true"
            android:rotation="-30"
            sl:scale_height="300"
            sl:scale_left="50"
            sl:scale_textsize="150"
            sl:scale_top="500"
            sl:scale_width="850"
            tools:ignore="MissingPrefix"/>
    </com.ssomai.android.scalablelayout.ScalableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="120dp">

        <com.ssomai.android.scalablelayout.ScalableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            sl:scale_base_height="160"
            sl:scale_base_width="100">

            <TextView
                android:id="@+id/tv_subtitle_com"
                android:fontFamily="@font/tmonmonsori"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:gravity="center_horizontal"
                android:text="TextView"
                android:textColor="@color/cardview_dark_background"
                sl:scale_height="40"
                sl:scale_left="0"
                sl:scale_textsize="13"
                sl:scale_top="5"
                sl:scale_width="100"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tv_desc_com"
                android:fontFamily="@font/malgunbd"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:gravity="left"
                android:text="TextView"
                android:textColor="#000000"
                sl:scale_height="120"
                sl:scale_left="0"
                sl:scale_textsize="7"
                sl:scale_top="35"
                sl:scale_width="100"
                tools:ignore="MissingPrefix" />

            <Button
                android:id="@+id/btn_finish"
                android:fontFamily="@font/mainfont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="확    인"
                android:background="@drawable/big_button"
                sl:scale_height="18"
                sl:scale_left="0"
                sl:scale_textsize="6"
                sl:scale_top="135"
                sl:scale_width="100"
                tools:ignore="MissingPrefix" />
        </com.ssomai.android.scalablelayout.ScalableLayout>

    </LinearLayout>

</RelativeLayout>